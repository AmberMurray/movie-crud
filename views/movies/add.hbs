<!-- Add a new movie page form -->
<br></br>
<h1>Add A New Movie Sucka!</h1>
{{#if error}}
<div class="alert-danger">{{error}}</div>
{{/if}}
<form method="POST" action="/movies" class='container col-md-6 col-md-offset-3 well'>
  <div class="form-group">
    <label for="name">Title</label>
    <input name="title" type="text" id="title" class="form-control" placeholder='movie title'>
  </div>
  <div class="form-group">
    <label for="image">Director</label>
    <input name='director' id="director" type="text" class="form-control" placeholder='director'>
  </div>
  <div class="form-group">
    <label for="item">Year</label>
    <input name="year" id="year" type="text" class="form-control" placeholder='year'>
  </div>
  <div class="form-group">
    <label for="item">Rating</label>
    <input name="my_rating" id="item" min = "0" max = "10" type="text" class="form-control" placeholder='0 - 10'>
  </div>
  <div class="form-group">
    <label for="item">Poster</label>
    <input name="poster_url" id="poster_url" type="text" class="form-control" placeholder='web address'>
  </div>
  <div class="form-group">
    <input id="submit" type="submit">
  </div>
</form>
