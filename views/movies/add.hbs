<form class='container col-md-6 col-md-offset-3'>
  <div class="form-group">
    <label for="name">Title</label> <input id="name" type="text" class="form-control" value="{{movie.name}}">
  </div>
  <div class="form-group">
    <label for="image">Director</label> <input id="image" type="text" class="form-control" value='{{movie.director}}'>
  </div>
  <div class="form-group">
    <label for="item">Year</label> <input id="item" type="text" class="form-control" value="{{movie.year}}">
  </div>
  <div class="form-group">
    <label for="item">Rating</label> <input id="item" type="text" class="form-control" value="{{movie.rating}}">
  </div>
  <div class="form-group">
    <label for="item">URL</label> <input id="item" type="text" class="form-control" value="{{movie.url}}">
  </div>
  <div class="form-group">
    <input id="submit" type="submit">
  </div>
</form>
