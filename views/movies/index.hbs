<a href="/"><h1>Movies Index Page</h1></a>

<div>
  <a href='/movies/add'><button type="button" class="btn btn-primary btn-lg btn">Add New Movie</button></a>
</div>

<table class="table table-striped">
  <thead>
      <th>Title</th>
      <th>Director</th>
      <th>Year</th>
      <th>My Rating</th>
    </tr>
  </thead>
  <tbody>
    {{#each movies}}
    <tr>
      <td><a href="/movies/{{id}}">{{title}}</a></td>
      <td>{{director}}</td>
      <td>{{year}}</td>
      <td>{{my_rating}}</td>
      <td><a href="/movies/{{id}}"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span></a></td>
      <td><a class="delete" href=""><span class="glyphicon glyphicon-remove" aria-hidden="true" data-id="{{id}}"></span></a></td>
    </tr>
    {{/each}}
  </tbody>
</table>
